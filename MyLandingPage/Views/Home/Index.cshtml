@{
    ViewData["Title"] = "Home Page";
    List<MyApplications>? myApplications = ViewBag.myApplications as List<MyApplications> ?? new List<MyApplications>();
}

<style>
    .app-card {
        transition: transform 0.15s ease, box-shadow 0.15s ease;
        cursor: pointer;
        border: none;
    }

    .app-card:hover {
        transform: translateY(-4px);
        box-shadow: 0 8px 20px rgba(0,0,0,0.15);
    }

    .app-icon {
        font-size: 2.5rem;
        opacity: 0.9;
    }

    /* Ensure readable text contrast */
    .app-card.bg-light .app-icon { color: #0d6efd; }
</style>

<div class="container mt-4">
    <div class="text-center mb-4">
        <h1 class="display-5 fw-bold">Welcome</h1>
        <p class="lead text-muted">
            Select an application to continue.
        </p>
    </div>

    <div class="row g-4">
        @foreach (var app in myApplications)
        {
            var target = app.OpenInNewTab ? "_blank" : "_self";
            <div class="col-12 col-sm-6 col-md-4 col-lg-3">
                <div class="card app-card h-100 @app.ColorClass" onclick="window.open('@app.MyAppUrl', '@target')">
                    <div class="card-body text-center d-flex flex-column justify-content-between">
                        <div>
                            <div class="mb-3">
                                @if (!string.IsNullOrWhiteSpace(app.IconCss))
                                {
                                    <i class="@app.IconCss app-icon"></i>
                                }
                                else
                                {
                                    <div class="app-icon fw-bold">@app.MyApplicationName?.Substring(0,1).ToUpper()</div>
                                }
                            </div>
                            <h5 class="card-title fw-semibold">@app.MyApplicationName</h5>
                            <p class="card-text small">@app.Description</p>
                        </div>
                        <a href="@app.MyAppUrl" target="@target" class="stretched-link text-decoration-none fw-semibold mt-2">
                            <span style="color:black">Open</span>
                        </a>
                    </div>
                </div>
            </div>
        }
    </div>
</div>
